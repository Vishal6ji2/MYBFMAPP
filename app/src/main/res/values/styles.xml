<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
    </style>


<!--    Bottomsheet style-->

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="ActionBarTabTextStyle.Tabtheme" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
    </style>


<!--    checkbox style-->
    <style name="CustomCheckbox" parent="AppTheme">
         <item name="android:button">@drawable/checkboxdrawable</item>
         <item name="android:background">@android:color/transparent</item>
    </style>


<!--    for switchcompat button text on/off-->
    <style name="BrandedSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">9dp</item>
    </style>


<!--    for Switchcompat color-->
    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3349E9</item>
        <item name="colorSwitchThumbNormal">#fff</item>
    </style>



</resources>
