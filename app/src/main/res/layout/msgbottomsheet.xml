<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetdesign"
    android:id="@+id/llmsgbottomsheet">

    <LinearLayout
        android:id="@+id/bschat_llsearchmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/searchicon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search message"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bschat_llblock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/blockicon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bschat_llmutemsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/muteicon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mute message"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bschat_llreport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/reporticon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bschat_llshareprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/shareicon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Profile"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bschat_lldeletechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/deleteicon"
            android:padding="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Chat"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

</LinearLayout>