<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/userlistpost_imgprofile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profilefive"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/userlistpost_txttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userlistpost_imgprofile"
                android:text="58 minutes ago"
                android:layout_marginStart="5dp"
                android:layout_alignBottom="@id/userlistpost_imgprofile"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/userlistpost_txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_toEndOf="@id/userlistpost_imgprofile"
                android:text="Serenagomez"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/userlistpost_imgloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/locationicon"
                android:layout_toEndOf="@id/userlistpost_txttime"
                android:layout_alignBottom="@id/userlistpost_imgprofile"/>


            <TextView
                android:id="@+id/userlistpost_txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instabul,Turkey"
                android:layout_toEndOf="@+id/userlistpost_imgloc"
                android:layout_alignBottom="@id/userlistpost_imgprofile"/>

            <ImageView
                android:id="@+id/userlistpost_imgmenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dotsicon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:visibility="invisible"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/userlistpost_txtlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The are of showing the video cinematically.The are of showing the video cinematically.The are of showing the video cinematically."
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"/>


        <ImageView
            android:id="@+id/userlistpost_imgpost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/customimg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/userlistpost_imgblackheart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/redhearticon"/>

            <TextView
                android:id="@+id/userlistpost_txtlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="281 likes"
                android:layout_toEndOf="@id/userlistpost_imgblackheart"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/userlistpost_txtcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 comments"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#43000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userlistpost_imgblackheartlike"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/likeblackicon"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:visibility="visible"/>


                    <ImageView
                        android:id="@+id/userlistpost_imgblueheartlike"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/redhearticon"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:visibility="invisible"/>

                </RelativeLayout>


                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/userlistpost_imgcomment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/commenticon"
                    android:layout_gravity="center"
                    android:padding="5dp"/>



                <ImageView
                    android:layout_weight="0.3"
                    android:id="@+id/userlistpost_imgshare"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shareicon"
                    android:layout_gravity="end"
                    android:padding="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/userlistpost_imgbookmark"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bookmarkicon"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>