<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llblockbottomsheet">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure that you want to Block"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#CB2E302E"/>


    <TextView
        android:id="@+id/bl_txtusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="James Cameron ?"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#CB2E302E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/bl_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete chat"
            style="@style/CustomCheckbox"
            android:padding="10dp"
            android:checked="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CB2E302E"/>

    <TextView
        android:id="@+id/bl_blocktxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block User"
        android:textColor="#3349E9"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CB2E302E"/>


    <TextView
        android:id="@+id/bl_txtcancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="17sp"
        android:padding="10dp"
        android:textColor="#CB2E302E"
        android:gravity="center"/>










</LinearLayout>