<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/post_imgprofile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profilefive"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/post_txttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/post_imgprofile"
                android:text="58 minutes ago"
                android:layout_marginStart="5dp"
                android:layout_alignBottom="@id/post_imgprofile"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/post_txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_toEndOf="@id/post_imgprofile"
                android:text="Serenagomez"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/post_imgloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/locationicon"
                android:layout_toEndOf="@id/post_txttime"
                android:layout_alignBottom="@id/post_imgprofile"/>


            <TextView
                android:id="@+id/post_txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instabul,Turkey"
                android:layout_toEndOf="@+id/post_imgloc"
                android:layout_alignBottom="@id/post_imgprofile"/>

            <ImageView
                android:id="@+id/post_imgmenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dotsicon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"/>



        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The are of showing the video cinematically.The are of showing the video cinematically.The are of showing the video cinematically."
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"/>


        <ImageView
            android:id="@+id/post_imgpost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/customimg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/post_imgblackheart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/redhearticon"/>

            <TextView
                android:id="@+id/post_txtlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="281 likes"
                android:layout_toEndOf="@id/post_imgblackheart"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/post_txtcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 comments"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#43000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_imgblackheartlike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/likeblackicon"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:visibility="visible"/>

                <ImageView
                    android:id="@+id/post_imgblueheartlike"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/redhearticon"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:visibility="invisible"/>

            <ImageView
                android:id="@+id/post_imgcomment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/commenticon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"/>



            <ImageView
                android:id="@+id/post_imgshare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shareicon"
                android:layout_alignParentEnd="true"
                android:padding="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_imgbookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bookmarkicon"
                android:layout_alignParentEnd="true"
                android:padding="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>