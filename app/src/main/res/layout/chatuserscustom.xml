<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:id="@+id/cucustom_relativelayout"
    android:background="?attr/selectableItemBackground">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:transitionName="customprofileimg"
        android:id="@+id/cucustom_profileimg"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/profilethree"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/customll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/cucustom_profileimg"
        android:layout_toStartOf="@id/cucustom_time"
        android:layout_centerVertical="true">

    <TextView
        android:transitionName="customprofilename"
        android:id="@+id/cucustom_chattername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mia Shroff"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/cucustom_msgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Hope you find the best one like.I Hope you find the best one like.I Hope you find the best one like.I Hope you find the best one like"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:maxLines="1"/>


    </LinearLayout>

    <TextView
        android:id="@+id/cucustom_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:text="2m"
        android:layout_alignTop="@id/customll"/>

</RelativeLayout>