<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreatePostActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/cp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/cp_posttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end"/>


    </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/cp_lineone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>


    <LinearLayout
        android:id="@+id/cp_llmind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profilethree"/>


        <EditText
            android:id="@+id/cp_edtcaptain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What's on your mind"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginStart="5dp"/>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <VideoView
            android:id="@+id/cp_postvideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cp_lloptions"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/cp_postimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cp_lloptions"
            android:scaleType="centerCrop"
            android:src="@drawable/profileone"
            android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/cp_lloptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:id="@+id/cp_llcamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cameracpicon"/>


            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="18sp"
                android:textColor="#F0575555"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

        <TextView
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#F0575555"
            android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cp_llgalleryvideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/collectionicon"/>


            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery / Video"
                android:textSize="18sp"
                android:textColor="#F0575555"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#F0575555"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cp_lltag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tagicon"/>


            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textSize="18sp"
                android:textColor="#F0575555"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#F0575555"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cp_llothers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/othericon"/>


            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="18sp"
                android:textColor="#F0575555"
                android:layout_marginStart="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#F0575555"
                android:layout_marginTop="5dp"/>

        </LinearLayout>



    </LinearLayout>

    </RelativeLayout>



</LinearLayout>