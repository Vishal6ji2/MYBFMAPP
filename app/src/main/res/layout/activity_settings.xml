<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/setting_edtsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:drawableStart="@drawable/searchicon"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:background="@drawable/searchbardesign"
        android:inputType="textFilter"
        android:singleLine="true"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/setting_txtaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/usernameicon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/setting_txtnotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/notificationicon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/setting_txtprivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/privacyicon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/setting_txtsecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/passwordicon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/setting_txthelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/helpicon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/setting_txtabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:drawableStart="@drawable/abouticon"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground"/>

</LinearLayout>